
public class Code_05_19 {

	public static void main(String[] args) {
        for(int lines = 8;lines >= 1;lines--)
        {
            for(int i = 1;i <= 4 * (lines-1);i++)
                System.out.print(" ");
            for(int i = 1;i <= (9 - lines);i++)
                System.out.printf("%4d",(int)Math.pow(2, i-1));
            for(int i = (8 - lines);i >= 1;i--)
                System.out.printf("%4d",(int)Math.pow(2, i-1));
            System.out.print("\n");
        }
    }

}
